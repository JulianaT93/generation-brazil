              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mensagem": {
                      "type": "string",
                      "example": "Usuário e/ou senha inválidos!"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Não foi possível encontrar usuário com o e-mail informado.",
