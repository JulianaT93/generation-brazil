        "requestBody": {
          "description": "Informar os dados para fazer login do usuário.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "Luiz Guarda"
                  },
                  "senha": {
                    "type": "string",
                    "example": "123abc"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "usuario": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 2
                        },
                        "nome": {
                          "type": "string",
                          "example": "Eduardo dos Santos"
                        },
                        "email": {
                          "type": "string",
                          "example": "Luiz Guarda"
                        }
                      }
                    },
                    "token": {
                      "type": "string",
                      "example": "<token>"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Se o e-mail e/ou senha estiverem errados, retornará erro.",
